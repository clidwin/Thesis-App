<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding">

    <TextView
        android:id="@+id/last_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="10dp"
        android:text="@string/last_location_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/last_location_label"
        android:stretchColumns="*"
        android:id="@+id/last_location_table_layout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:id="@+id/last_location_label_row">

            <TextView
                android:id="@+id/last_update_time_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/longitude_label"
                android:layout_weight="1"
                android:text="@string/last_update_time_label"
                android:textSize="@dimen/default_text_size"
                android:textStyle='bold'
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/latitude_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:text="@string/latitude_label"
                android:textSize="@dimen/default_text_size"
                android:textStyle='bold'
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/longitude_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/latitude_label"
                android:layout_weight="1"
                android:text="@string/longitude_label"
                android:textSize="@dimen/default_text_size"
                android:textStyle='bold'
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/address_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/last_update_time_label"
                android:layout_weight="1"
                android:text="@string/address_label"
                android:textSize="@dimen/default_text_size"
                android:textStyle='bold'
                android:textAlignment="center"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:id="@+id/last_location_data_row">

            <TextView
                android:id="@+id/last_update_time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/last_update_time_label"
                android:layout_marginLeft="@dimen/small_margin_left"
                android:layout_toRightOf="@+id/last_update_time_label"
                android:layout_weight="1"
                android:textSize="@dimen/default_text_size" />

            <TextView
                android:id="@+id/latitude_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/latitude_label"
                android:layout_marginLeft="@dimen/small_margin_left"
                android:layout_toRightOf="@+id/latitude_label"
                android:layout_weight="1"
                android:textSize="@dimen/default_text_size" />

            <TextView
                android:id="@+id/longitude_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/longitude_label"
                android:layout_marginLeft="@dimen/small_margin_left"
                android:layout_toRightOf="@+id/longitude_label"
                android:layout_weight="1"
                android:textSize="@dimen/default_text_size" />

            <TextView
                android:id="@+id/location_address_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/address_label"
                android:layout_weight="1"
                android:textSize="@dimen/default_text_size" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/all_locations_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="10dp"
        android:text="@string/all_locations_label"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/last_location_table_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/all_locations_label"
        android:stretchColumns="*"
        android:id="@+id/all_locations_table_layout" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:id="@+id/all_locations_table_header" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView3"
                android:layout_weight="1"
                android:text="@string/last_update_time_label"
                android:textSize="@dimen/default_text_size"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:text="@string/latitude_label"
                android:textSize="@dimen/default_text_size"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView2"
                android:layout_weight="1"
                android:text="@string/longitude_label"
                android:textSize="@dimen/default_text_size"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_weight="1"
                android:text="@string/address_label"
                android:textSize="@dimen/default_text_size"
                android:textStyle="bold"
                android:textAlignment="center" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
    </ScrollView>
